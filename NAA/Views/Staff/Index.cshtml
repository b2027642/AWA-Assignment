@model IList<NAA.Data.University>
@{
    ViewBag.Title = "University";
}

<h2>List of affiliated universities</h2>

<div class="row">
    <div class="col-md-12">
        <a class="btn pull-right" href="@Url.Action("EditUniversity", "Staff")" title="Add University">Add University</a>
    </div>
</div>

<table class="table table-responsive table-striped table-hover table-condensed">
    <tr>
        <th>
            University Name
        </th>
        <th style="width: 125px;">Action</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.UniversityName
            </td>
            <td>
                <a href="@Url.Action("Courses", new {universityId = item.UniversityId})">Courses</a>
                <a href="@Url.Action("EditUniversity", new {universityId = item.UniversityId})">Edit</a>
            </td>
        </tr>
    }
</table>
